<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="espinosaprogreso3.Views.FormularioPage"
             xmlns:vm="clr-namespace:espinosaprogreso3.ViewModels">
    <ContentPage.BindingContext>
        <vm:FormularioViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Title>Abigail Espinosa - 07/07/2003</ContentPage.Title>

    <StackLayout Padding="20">
        <Label Text="Prenda:" />
        <Entry Text="{Binding PrendaNombre}" />

        <Label Text="Color:" />
        <Entry Text="{Binding Color}" />

        <Label Text="Talla:" />
        <Entry Text="{Binding Talla}" Keyboard="Numeric" />

        <Label Text="Â¿En inventario?" />
        <Switch IsToggled="{Binding EnInventario}" />

        <Button Text="Guardar" Command="{Binding GuardarCommand}" />
    </StackLayout>
</ContentPage>
