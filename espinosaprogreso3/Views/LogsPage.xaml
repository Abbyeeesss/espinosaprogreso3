<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="espinosaprogreso3.Views.LogsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Registros de Logs">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">

            <Label Text="Logs del Sistema"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="A continuaciÃ³n se muestran los registros guardados en el archivo de texto:"
                   FontSize="14" />

            <Frame Padding="10" BorderColor="Gray">
                <Label Text="{Binding LogContent}"
                       FontSize="12"
                       FontFamily="Courier"
                       LineBreakMode="WordWrap" />
            </Frame>

            <Button Text="Actualizar Logs"
                    Command="{Binding LoadLogsCommand}"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="45" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
